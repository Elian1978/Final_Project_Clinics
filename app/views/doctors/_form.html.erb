<%= form_with(model: doctor) do |form| %>

  <div class="form-group">
  <%= form.label :message, class:"control-label" %>
  <%= form.text_field :message, autofocus: true, class:"form-control" %>
  </div>

  <div class="form-group">
  <%= form.label :consult_reason, class:"control-label" %>
  <%= form.text_field :consult_reason, autofocus: true, class:"form-control" %>
  </div>

 
   <div class="field">
    <%= form.label :patient_id  %>
    <%= form.select :patient_id  , Patient.pluck(:first_name, :id) %>
  </div>

  <div class="field">
    <%= form.label :doctor_id %>
    <%= form.select :doctor_id , Doctor.pluck(:name, :id) %>
  </div>

   <div class="actions">
    <%= form.submit data: {disable_with: 'submitting...'}%>
  </div>
<% end %>