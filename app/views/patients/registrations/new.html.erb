<form>
    <h2>Sign up</h2>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "patients/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="form-group">
      <%= f.label :first_name, class:"control-label" %>
      <%= f.text_field :first_name, autofocus: true, class:"form-control" %>
    </div>


    <div class="form-group">
      <%= f.label :last_name, class:"control-label" %>
      <%= f.text_field :last_name, autofocus: true, class:"form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :age , class:"control-label" %>
      <%= f.text_field :age , autofocus: true, class:"form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :language, class:"control-label" %>
      <%= f.text_field :language, autofocus: true, class:"form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :sex, class:"control-label" %>
      <%= f.text_field :sex, autofocus: true, class:"form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :phone, class:"control-label" %>
      <%= f.text_field :phone, autofocus: true, class:"form-control" %>
    </div>

    <div class="form-group">
    <%= f.label :provincia, class:"control-label" %>
    <%= f.text_field :provincia, autofocus: true, class:"form-control" %>
    </div>

    <div class="form-group">
    <%= f.label :canton, class:"control-label" %>
    <%= f.text_field :canton, autofocus: true, class:"form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :distrito, class:"control-label" %>
      <%= f.text_field :distrito, autofocus: true, class:"form-control" %>
    </div>
    
    <div class="form-group">
      <%= f.label :barrio, class:"control-label" %>
      <%= f.text_field :barrio, autofocus: true, class:"form-control" %>
    </div>
 
    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
<% end %>

<%= render "patients/shared/links" %>

